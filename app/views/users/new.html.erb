<% provide(:title, 'Sign up') %>
<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<link  rel="stylesheet" type="text/css" href="users.scss"/>

<script language='javascript'  type="text/javascript" src="users.js"></script>

</head>

<body>

<div id="box">
 <button class= "btnprimary">     <%= link_to "Log in", login_path, method: "get" %></button>
<h1>Sign up</h1>
</div><br>
<div id ="error">  <%= render 'shared/error_messages' %></div>
<div id="container" >
    
  <div >
    <%= form_for(@user) do |f| %>
 
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :email %>
      <%= f.email_field :email %><br>
      
       <%= f.label :phone %>
      <%= f.phone_field :phone %><br>

      <%= f.label :password %>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "Create my account", class: "btnlarge" %>
    <% end %>
  </div>
</div>

</body>
</html>